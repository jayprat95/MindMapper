            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/statusTextView"-->
            <!--android:text="EEG Status"-->
            <!--android:gravity="center"-->
            <!--android:textSize="15sp"-->
